{
  "resourceType": "Measure",
  "meta": {
    "profile": [
      "http://hl7.org/fhir/StructureDefinition/Measure"
    ]
  },
  "version": "1.0",
  "url": "https://medizininformatik-initiative.de/fhir/fdpg/Measure/ExampleConditionIcd10AndStatus",
  "status": "active",
  "experimental": false,
  "publisher": "FDPG-Plus",
  "name": "ExampleConditionIcd10WithStatus",
  "title": "Example Condition Icd10 with Status",
  "description": "Example Measure to count all ICD-10 codes with clinical status.",
  "date": "2024-05-10",
  "group": [
    {
      "basis": "Condition",
      "description": "Simple Stratifier concept",
      "population": [
        {
          "code": {
            "coding": [
              {
                "system": "http://terminology.hl7.org/CodeSystem/measure-population",
                "code": "initial-population"
              }
            ]
          },
          "criteria": {
            "language": "text/x-fhir-query",
            "expression": "Condition?_profile=https://www.medizininformatik-initiative.de/fhir/core/modul-diagnose/StructureDefinition/Diagnose"
          }
        }
      ],
      "stratifier": [
        {
          "code": {
            "coding": [
              {
                "system": "http://fhir-evaluator/strat/system",
                "code": "icd10-code-and-status"
              }
            ]
          },
          "component": [
            {
              "criteria": {
                "language": "text/fhirpath",
                "expression": "Condition.code.coding.where(system='http://fhir.de/CodeSystem/bfarm/icd-10-gm')"
              },
              "code": {
                "coding": [
                  {
                    "system": "http://fhir-evaluator/strat/system",
                    "code": "icd10-code"
                  }
                ]
              }
            },
            {
              "criteria": {
                "language": "text/fhirpath",
                "expression": "Condition.clinicalStatus.coding"
              },
              "code": {
                "coding": [
                  {
                    "system": "http://fhir-evaluator/strat/system",
                    "code": "condition-clinical-status"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
